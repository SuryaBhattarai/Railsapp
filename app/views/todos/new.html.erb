<h1>Create a new todo</h1>

<% if @todo.errors.any? %>
<h2> The following errors prevents todo to save</h2>
<ul>
  <% @todo.errors.full_messages.each do |msg| %>
  <li> <%= msg %></li>
  <% end %>
</ul>

<% end %>

<%= form_for @todo do |f| %>
<p>
  <%= f.label :Name %><br>
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label :Description %><br>
  <%= f.text_area :description %>
</p>
<p>
  <%= f.submit %>
</p>


<% end %>
